<li class="item" data-id="<%= item.id %>">
  <div class="view">
    <input class="toggle" type="checkbox" checked="">
    <label><%= item.content %></label>
    <button class="destroy"></button>
  </div>
  <%= form_for(item, remote: :true) do |f| %>
    <%= f.text_field :content, :class => "edit" %>
  <% end %>
</li>


